<div class="card bg-light border-primary mb-3">
    <div class="card-header border-primary ">
      <%= @battle.pet_battles[0].pet.name %>
      vs.
      <%= @battle.pet_battles[1].pet.name %>
    </div>
    <div class="pet-show-card">
      <div class="top-part-of-card">
        <div >
          <img id="left-pet" class="avatar-img big-image" src=<%= @battle.pet_battles[0].pet.avatar.url(:square) %>>
          </div>
          <%= link_to "The Battle Is Over! Click Here", current_user, :id => "redirect-to-profile",
      :class => "game-over btn btn-warning action-buttons  hidden" %>

        <div >
          <img id="right-pet" class="avatar-img big-image" src=<%= @battle.pet_battles[1].pet.avatar.url(:square)%>>

          </div>
          <div class="pet-show-card-body">
            <h3 class="pet-show-card-title"></h3>
          <div class="stats-div">

            </div>
            <div class="buttons-div">
              <div class="<%= @battle.id %>">
              <button class="btn btn-warning action-buttons" id="fight-button">Start!</button>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

